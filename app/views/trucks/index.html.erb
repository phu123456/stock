<p id="notice"><%= notice %></p>
<%= render '/layouts/header' %>
<h1 align="center">ทะเบียนรถ</h1>
<br>

<table class="table table-striped" style="width:40%" align="center">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td class="ui-helper-center"><%= truck.plate %></td>
        <td class="ui-helper-center"><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
  <br>
  <%= link_to 'เพิ่มทะเบียนรถ', new_truck_path %>
</div>
